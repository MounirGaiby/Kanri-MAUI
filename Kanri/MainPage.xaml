<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kanri.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">
            <HorizontalStackLayout Spacing="10">
                <Button Text="Ajouter" Clicked="OnAddClicked" />
                <Button Text="Modifier" Clicked="OnEditClicked" IsEnabled="{Binding IsEmployeeSelected}" />
                <Button Text="Supprimer" Clicked="OnDeleteClicked" IsEnabled="{Binding IsEmployeeSelected}" />
                <Button Text="Exporter" Clicked="OnExportClicked" />
            </HorizontalStackLayout>

            <CollectionView x:Name="EmployeesCollection" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*, *, *, *, *">
                            <Label Text="{Binding FirstName}" Grid.Column="0" />
                            <Label Text="{Binding LastName}" Grid.Column="1" />
                            <Label Text="{Binding Gender}" Grid.Column="2" />
                            <Label Text="{Binding Salary}" Grid.Column="3" />
                            <Label Text="{Binding BirthDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="4" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Frame x:Name="EmployeeForm" IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="FirstNameEntry" Placeholder="Prénom" />
                    <Entry x:Name="LastNameEntry" Placeholder="Nom" />
                    <Picker x:Name="GenderPicker" Title="Genre">
                        <Picker.Items>
                            <x:String>Homme</x:String>
                            <x:String>Femme</x:String>
                        </Picker.Items>
                    </Picker>
                    <Entry x:Name="SalaryEntry" Placeholder="Salaire" Keyboard="Numeric" />
                    <DatePicker x:Name="BirthDatePicker" />
                    <Button Text="Sauvegarder" Clicked="OnSaveClicked" />
                    <Button Text="Annuler" Clicked="OnCancelClicked" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
