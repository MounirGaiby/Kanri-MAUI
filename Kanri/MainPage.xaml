<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kanri.MainPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray950}}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="15">
            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray900}}"
                   Padding="15" CornerRadius="10">
                <HorizontalStackLayout Spacing="10">
                    <Button Text="Ajouter" Clicked="OnAddClicked" 
                            BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray700}}"
                            TextColor="White" />
                    <Button Text="Modifier" Clicked="OnEditClicked" 
                            IsEnabled="{Binding IsEmployeeSelected}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Tertiary}, Dark={StaticResource Gray700}}"
                            TextColor="White" />
                    <Button Text="Supprimer" Clicked="OnDeleteClicked" 
                            IsEnabled="{Binding IsEmployeeSelected}"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Error}, Dark={StaticResource Gray700}}"
                            TextColor="White" />
                    <Button Text="Exporter" Clicked="OnExportClicked"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray700}}"
                            TextColor="White" />
                </HorizontalStackLayout>
            </Frame>

            <Frame BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   Padding="15" CornerRadius="10">
                <!-- Column Headers -->
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*, *, *, *, *, *" 
                          BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Gray800}}"
                          Padding="10">
                        <Label Text="ID" Grid.Column="0" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Prénom" Grid.Column="1" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Nom" Grid.Column="2" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Genre" Grid.Column="3" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Salaire" Grid.Column="4" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Date de naissance" Grid.Column="5" TextColor="White" FontAttributes="Bold"/>
                    </Grid>

                    <CollectionView x:Name="EmployeesCollection" SelectionMode="Single" 
                                  SelectionChanged="OnSelectionChanged">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" ColumnDefinitions="*, *, *, *, *, *">
                                    <Label Text="{Binding Id}" Grid.Column="0" />
                                    <Label Text="{Binding FirstName}" Grid.Column="1" />
                                    <Label Text="{Binding LastName}" Grid.Column="2" />
                                    <Label Text="{Binding Gender}" Grid.Column="3" />
                                    <Label Text="{Binding Salary, StringFormat='{0:C}'}" Grid.Column="4" />
                                    <Label Text="{Binding BirthDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="5" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <Frame x:Name="EmployeeForm" IsVisible="False"
                   BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                   Padding="15" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="FirstNameEntry" Placeholder="Prénom" />
                    <Entry x:Name="LastNameEntry" Placeholder="Nom" />
                    <Picker x:Name="GenderPicker" Title="Genre">
                        <Picker.Items>
                            <x:String>Homme</x:String>
                            <x:String>Femme</x:String>
                        </Picker.Items>
                    </Picker>
                    <Entry x:Name="SalaryEntry" Placeholder="Salaire" Keyboard="Numeric" />
                    <DatePicker x:Name="BirthDatePicker" />
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Sauvegarder" Clicked="OnSaveClicked"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Success}, Dark={StaticResource Gray700}}"
                                TextColor="White" />
                        <Button Text="Annuler" Clicked="OnCancelClicked"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray700}}"
                                TextColor="White" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
